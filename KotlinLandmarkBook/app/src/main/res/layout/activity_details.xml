<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/iv_landmark"
        android:layout_width="269dp"
        android:layout_height="280dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_landmark_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_landmark_name"
        android:layout_width="139dp"
        android:layout_height="88dp"
        android:layout_marginBottom="163dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_landmark"
        app:layout_constraintStart_toStartOf="@+id/iv_landmark"
        app:layout_constraintTop_toBottomOf="@+id/iv_landmark" />
</androidx.constraintlayout.widget.ConstraintLayout>